@page
@model lab5.Pages.Tickets.IndexModel

<h1>Tickets</h1>
@{
    if(TempData["success"] != null)
    {
        <h1>@TempData["success"]</h1>
    }
}
<a asp-page="Create" class="btn btn-primary">Add new ticket</a>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                ID ticket
            </th>
            <th>
                Surname reader
            </th>
            <th>
                Name reader
            </th>
            <th>
                Patronymic name reader
            </th>
            <th>
                Date start
            </th>
            <th>
                Date end
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var ticket in Model._tickets)
        {
            <tr>
                <td>
                    @ticket.ID
                </td>
                <td>
                    @ticket.Reader.Surname
                </td>
                <td>
                    @ticket.Reader.Name
                </td>
                <td>
                    @ticket.Reader.PatronymicName
                </td>
                <td>
                    @ticket.DateStart.ToString("d")
                </td>
                <td>
                    @ticket.DateEnd.ToString("d")
                </td>
                <td>
                    <a asp-page="Delete" asp-route-id="@ticket.ID" class="btn btn-danger">Delete information</a>
                </td>
            </tr>
        }
    </tbody>
</table>
